@model CommentViewModel

@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Comment</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: #f9f9f9;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            width: 300px;
        }

        input[type="text"], button {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box; 
        }

        button {
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            margin-top: 10px;
        }

            button:hover {
                background-color: #0056b3;
            }

        span.validation-message {
            color: #cc0000;
            font-size: 0.8em;
            display: block; 
        }
    </style>
</head>
<body>
    <div>
        <form method="post" asp-controller="Home" asp-action="Comment">
            <input asp-for="PostId" type="hidden" />
            <input asp-for="MainCommentId" type="hidden" />
            <input asp-for="Message" placeholder="Your comment here..." />
            <span asp-validation-for="Message" class="validation-message"></span>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
